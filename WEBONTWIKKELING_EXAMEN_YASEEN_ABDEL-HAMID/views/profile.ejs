<%- include("header") %>

    <%- include("nav") %>

    <main style="position: relative">
        <div class="header">
            <h2><%= profile.name %></h2>
        </div>

        <img class="profile_banner" src="/images/banners/<%= profile.handle %>.png"/>
        <img class="profile_avatar" src="/images/avatars/<%= profile.handle %>.png"/>
        <% // Toon deze button enkel bij het profiel van de gebruiker zelf. %>
        <% if (userHandle === profile.handle) { %>
                        <a class="profile_edit" href="/settings/profile">Edit profile</a>
        <% } %>
        <% // %>
        <section class="profile">
            <div class="profile_name"><%= profile.name %></div>
            <div class="profile_handle"><%= profile.handle %></div>
            <div class="profile_bio"><%= profile.bio %></div>
        </section>

        <%- include("tweets") %>

    </main>

    <%- include("aside") %>
    
<%- include("footer") %>