<aside>

    <div class="aside_input">
        <span class="material-icons aside_search-icon">search</span>
        <form method="GET" action="/search">
            <input type="text" placeholder="Search Twitter" name="q" >
            <input type="submit" id="submitbtn" style="display:none;"/>
        </form>

    </div>

    <div class="aside_container">
        <div class="trends">
        <span class="title">Trends for you</span>
            <!-- Schrijf een for loop over de trendingTags om deze te laten zien. -->
            <% trendingTags.forEach(element => { %>
                <div class="trend">
                    <div class="trend_category">Trending</div>
                    <div class="trend_name"><%= element.tag %></div>
                    <div class="trend_amount"><%= element.count %></div>
                    <span class="material-icons dots"><span class="material-symbols-outlined">
                        more_horiz
                    </span>
                </div>
    
            <% }) %>
        </div>
    </div>
    
</aside>